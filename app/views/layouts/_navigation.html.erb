<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <span class="main-title">Track my Campaign</span>
  <span class="sub-title">
    <% db_instances = db_instances_this_user
    if (db_instances.present? && db_instances.count > 1) %>
      <ul id='switch_db' class="nav navbar-nav navbar-right">
        <li id="fat-menu" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=current_db.present? ? "Switch" : "Select Database" %> <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% db_instances.each do |dbi|%>
              <li><%= link_to dbi.name, database_home_path(dbi) %></li>
            <% end %>
          </ul>
        </li>
      </ul>
    <% end %>
    <% if current_db.present? %>
      Current database: <%=current_db.name %>
    <% end %>
  </span>
  <% if current_user.present? %>
    <span class="sub-title"> Logged in as: <%= link_to "#{current_user.first_name} #{current_user.last_name}", profile_edit_path %></span>
  <% end %>
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= render 'layouts/navigation_links' %>
      </ul>
    </div>
  </div>
</nav>
