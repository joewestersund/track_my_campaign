<h1>Policies</h1>

<%= link_to 'New Policy', new_heal_policy_path, class: "link-to-new" if has_write_permissions? %>
<br><br>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Name</th>
      <th>Order in list</th>
      <% if has_write_permissions? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @policies.each do |policy| %>
      <tr>
        <td><%= policy.category %></td>
        <td><%= policy.subcategory %></td>
        <td><%= policy.name %></td>
        <td><%= policy.order_in_list %></td>
        <% if has_write_permissions? %>
          <td><%= link_to 'Edit', edit_heal_policy_path(policy) %></td>
          <td><%= link_to 'Delete', policy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @policies %>
<br>