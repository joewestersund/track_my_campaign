<h1>Communication Types</h1>

<%= link_to 'New Communication Type', new_heal_communication_type_path, class: "link-to-new" if has_write_permissions? %>
<br><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order in list</th>
      <% if has_write_permissions? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @communication_types.each do |communication_type| %>
      <tr>
        <td><%= communication_type.name %></td>
        <td><%= communication_type.order_in_list %></td>
        <% if has_write_permissions? %>
          <td><%= link_to 'Edit', edit_heal_communication_type_path(communication_type) %></td>
          <td><%= link_to 'Delete', communication_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @communication_types %>
<br>