<h1>Organization Types</h1>

<%= link_to 'New Organization Type', new_heal_organization_type_path, class: "link-to-new" if has_write_permissions? %>
<br><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order in list</th>
      <% if has_write_permissions? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @organization_types.each do |organization_type| %>
      <tr>
        <td><%= organization_type.name %></td>
        <td><%= organization_type.order_in_list %></td>
        <% if has_write_permissions? %>
          <td><%= link_to 'Edit', edit_heal_organization_type_path(organization_type) %></td>
          <td><%= link_to 'Delete', organization_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @organization_types %>
<br>