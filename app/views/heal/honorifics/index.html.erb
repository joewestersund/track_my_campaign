<h1>Honorifics (used in the Contacts table)</h1>

<%= link_to 'New Honorific', new_heal_honorific_path, class: "link-to-new" if has_write_permissions? %>
<br><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order in list</th>
      <% if has_write_permissions? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @honorifics.each do |honorific| %>
      <tr>
        <td><%= honorific.name %></td>
        <td><%= honorific.order_in_list %></td>
        <% if has_write_permissions? %>
          <td><%= link_to 'Edit', edit_heal_honorific_path(honorific) %></td>
          <td><%= link_to 'Delete', honorific, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @honorifics %>
<br>