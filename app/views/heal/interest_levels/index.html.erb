<h1>Levels of Interest in HEAL Cities (used in the Contacts table)</h1>

<%= link_to 'New Interest Level', new_heal_interest_level_path, class: "link-to-new" if has_write_permissions? %>
<br><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order in list</th>
      <% if has_write_permissions? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @interest_levels.each do |interest_level| %>
      <tr>
        <td><%= interest_level.name %></td>
        <td><%= interest_level.order_in_list %></td>
        <% if has_write_permissions? %>
          <td><%= link_to 'Edit', edit_heal_interest_level_path(interest_level) %></td>
          <td><%= link_to 'Delete', interest_level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @interest_levels %>
<br>