<h1>Status Types (used in the Milestones table)</h1>

<%= link_to 'New Status Type', new_heal_status_type_path, class: "link-to-new" if has_write_permissions? %>
<br><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order in list</th>
      <% if has_write_permissions? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @status_types.each do |status_type| %>
      <tr>
        <td><%= status_type.name %></td>
        <td><%= status_type.order_in_list %></td>
        <% if has_write_permissions? %>
          <td><%= link_to 'Edit', edit_heal_status_type_path(status_type) %></td>
          <td><%= link_to 'Delete', status_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @status_types %>
<br>