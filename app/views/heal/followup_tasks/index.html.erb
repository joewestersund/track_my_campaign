<h1>Followup Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Due date</th>
      <th>Description</th>
      <th>Assigned to</th>
      <th>Assigned by</th>
      <th>Prior communication</th>
      <th>Completed</th>
      <th>Completed date</th>
      <th>Completed by</th>
      <th>Completion notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @followup_tasks.each do |followup_task| %>
      <tr>
        <td><%= followup_task.due_date %></td>
        <td><%= followup_task.description %></td>
        <td><%= followup_task.assigned_to_id %></td>
        <td><%= followup_task.assigned_by_id %></td>
        <td><%= followup_task.prior_communication_id %></td>
        <td><%= followup_task.completed %></td>
        <td><%= followup_task.completed_date %></td>
        <td><%= followup_task.completed_by_id %></td>
        <td><%= followup_task.completion_notes %></td>
        <td><%= link_to 'Show', followup_task %></td>
        <td><%= link_to 'Edit', edit_heal_followup_task_path(followup_task) %></td>
        <td><%= link_to 'Destroy', followup_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

