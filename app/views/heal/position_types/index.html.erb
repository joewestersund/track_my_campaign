<h1>Position Types</h1>

<%= link_to 'New Position Type', new_heal_position_type_path, class: "link-to-new" if has_write_permissions? %>
<br><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order in list</th>
      <% if has_write_permissions? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @position_types.each do |position_type| %>
      <tr>
        <td><%= position_type.name %></td>
        <td><%= position_type.order_in_list %></td>
        <% if has_write_permissions? %>
          <td><%= link_to 'Edit', edit_heal_position_type_path(position_type) %></td>
          <td><%= link_to 'Delete', position_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @position_types %>
<br>