<h1>Milestone Types</h1>

<%= link_to 'New Milestone Type', new_heal_milestone_type_path, class: "link-to-new" if has_write_permissions? %>
<br><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order in list</th>
      <% if has_write_permissions? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @milestone_types.each do |milestone_type| %>
      <tr>
        <td><%= milestone_type.name %></td>
        <td><%= milestone_type.order_in_list %></td>
        <% if has_write_permissions? %>
          <td><%= link_to 'Edit', edit_heal_milestone_type_path(milestone_type) %></td>
          <td><%= link_to 'Delete', milestone_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @milestone_types %>
<br>