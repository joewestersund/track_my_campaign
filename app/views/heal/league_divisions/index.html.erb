<h1>League Divisions (used in the Cities table)</h1>

<%= link_to 'New League Division', new_heal_league_division_path, class: "link-to-new" if has_write_permissions? %>
<br><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order in list</th>
      <% if has_write_permissions? %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @league_divisions.each do |league_division| %>
      <tr>
        <td><%= league_division.name %></td>
        <td><%= league_division.order_in_list %></td>
        <% if has_write_permissions? %>
          <td><%= link_to 'Edit', edit_heal_league_division_path(league_division) %></td>
          <td><%= link_to 'Delete', league_division, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @league_divisions %>
<br>