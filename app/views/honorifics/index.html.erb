<h1>Listing honorifics</h1>

<table>
  <thead>
    <tr>
      <th>Database instance</th>
      <th>Name</th>
      <th>Order in list</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @honorifics.each do |honorific| %>
      <tr>
        <td><%= honorific.database_instance_id %></td>
        <td><%= honorific.name %></td>
        <td><%= honorific.order_in_list %></td>
        <td><%= link_to 'Show', honorific %></td>
        <td><%= link_to 'Edit', edit_honorific_path(honorific) %></td>
        <td><%= link_to 'Destroy', honorific, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

